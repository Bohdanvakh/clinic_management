<%= form_for @user, url: patient_path(@user), method: :patch do |f| %>
    <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>
    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </div>
    <div>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
  <%= f.submit 'Update' %>
<% end %>